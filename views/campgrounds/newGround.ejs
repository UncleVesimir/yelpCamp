<% include ../partials/header %>



    <div class="row">
      <h1 style="text-align:center">Create a New Campground</h1>


      <div style="width:30%; margin: 25px auto;">
        <form action="/campgrounds" method="POST">
          <div class="form-group">
            <label for="name">YelpCamp Name</label>
            <input class="form-control" id="name" type="text" placeholder="New Campground name" name="name">
          </div>
          <div class="form-group">
            <label for="image">Image URL</label>
            <input class="form-control" id="image" type="text" placeholder="An image URL of your new Campground" name="image">
          </div>
          <div class="form-group">
            <label for="description">Description of your YelpCamp</label>
            <input class="form-control" id="description" type="text" placeholder="A description of your new Campground" name="description">
          </div>
          <div class="form-group">
            <label for="location">YelpCamp Location</label>
            <input class="form-control" id="location" type="text" placeholder="The YelpCamp location e.g. 'Yosemite National Park, CA'" name="location">   
          </div>
          <div class="form-group">
            <label for="price">YelpCamp Price - £/night</label>
            <input class="form-control" id="price" type="number" placeholder="£ price per night" name="price" min="0.01" step="0.01">
          </div>
          <div class="form-group">
            <input class="btn btn-large btn-primary btn-block" type="submit">
          </div>
        </form>
        <a href="/campgrounds">Go back</a>
      </div>
    </div>





  <% include ../partials/footer %>