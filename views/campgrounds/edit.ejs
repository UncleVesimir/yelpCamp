<% include ../partials/header %>




    <div class="row">
      <h1 style="text-align:center"> Edit <%= campground.name %>  Campground</h1>


      <div style="width:30%; margin: 25px auto;">
        <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
          <div class="form-group">
            <label for="name">YelpCamp Name</label>
            <input class="form-control" id="name" type="text" placeholder="YelpCamp Name" name="campground[name]" value= "<%= campground.name %>" >
          </div>
          <div class="form-group">
            <label for="image">Image URL</label>
            <input class="form-control" id="image" type="text" placeholder="YelpCamp Image URL" name="campground[image]" value= "<%= campground.image %>">
          </div>
          <div class="form-group">
            <label for="description">Description of your YelpCamp</label>
            <input class="form-control" id="description" type="text" placeholder="A description of your YelpCamp" name="campground[description]" value="<%= campground.description %>" >
          </div>
          <div class="form-group">
            <label for="location">YelpCamp Location</label>
            <input class="form-control" id="location" type="text" placeholder="YelpCamp Location" name="campground[location]" value="<%= campground.location %>">   
          </div>
          <div class="form-group">
            <label for="price">YelpCamp Price - £/night</label>
            <input class="form-control" id="price" type="number" placeholder="YelpCamp Price - £/night" name="campground[price]" value="<%= campground.price %>" min ="0.01" step="0.01" >
          </div>
          <div class="form-group">
            <input class="btn btn-large btn-primary btn-block" type="submit">
          </div>
        </form>
        <a href="/campgrounds/<%= campground._id %>">Go back</a>
      </div>
    </div





  <% include ../partials/footer %>